<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables" >

    <ImageView
        android:id="@+id/im_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/z"
        android:src="@drawable/yf_logo_m" />

    <TextView
        android:id="@+id/tV_about_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/about_author"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF888888" />
    <TextView
        android:id="@+id/tV_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/about_version"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF888888" />
    <TextView
        android:id="@+id/tV_about_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/about_email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF888888" />
    <TextView
        android:id="@+id/tV_about_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/about_more"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF888888" />

</LinearLayout>